{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./backend/dist",
    "rootDir": "./backend"
  },
  "include": ["backend/api/**/*.ts", "backend/lib/**/*.ts"],
  "exclude": ["node_modules"]
}