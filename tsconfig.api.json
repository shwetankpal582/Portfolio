    "module": "commonjs",
    "outDir": "dist/api",
    "rootDir": "./api",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules"]
}
