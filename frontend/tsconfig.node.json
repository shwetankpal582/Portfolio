{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "ES2023"
    ],
    "module": "NodeNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "vite.config.ts",
    "tailwind.config.ts",
    "postcss.config.js"
  ]
}